{% extends 'base.html.twig' %} {% block title %}Contact{% endblock %} {% block
body %}
<div class="container mt-5">
  <h1 class="text-center mb-4 text-primary">
    Contactez-nous <i class="bi bi-telephone-fill"></i>
  </h1>

  {% for label, messages in app.flashes %}
  <div class="alert alert-{{ label }}">
    {% for message in messages %}
    {{ message }}
    {% endfor %}
  </div>
  {% endfor %}

  <div class="row">
    
    <div class="col-md-6">
      <h3 class="mt-4 text-secondary">Formulaire de Contact</h3>
      {{
        form_start(form, { attr: { class: "bg-light p-4 rounded shadow-sm" } })
      }}
      <div class="form-group mb-3">
        {{ form_row(form.nom, { attr: { class: "form-control" } }) }}
      </div>
      <div class="form-group mb-3">
        {{ form_row(form.email, { attr: { class: "form-control" } }) }}
      </div>
      <div class="form-group mb-3">
        {{ form_row(form.sujet, { attr: { class: "form-control" } }) }}
      </div>
      <div class="form-group mb-3">
        {{
          form_row(form.message, { attr: { class: "form-control", rows: "4" } })
        }}
      </div>
      <div class="form-group">
        {{
          form_row(form.submit, { attr: { class: "btn btn-primary w-100" } })
        }}
      </div>
      {{ form_end(form) }}
    </div>

    
    <div class="col-md-6">
      <h3 class="mt-4 text-secondary">Nos coordonnées</h3>
      <ul class="list-unstyled text-dark">
        <li>
          <strong>Adresse :</strong> Rue Louis Rouget, 45000 Orléans, France
        </li>
        <li><strong>Téléphone :</strong> +33 5 66 00 00 00</li>

        <li><strong>Horaires :</strong> Du lundi au vendredi : 9h00 - 18h00</li>
      </ul>

      <h3 class="mt-4 text-secondary">Nous trouver</h3>
      <div class="embed-responsive embed-responsive-16by9 mt-3">
        <iframe
          class="embed-responsive-item"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2635.1199361561963!2d1.9092522766512385!3d47.902964171194204!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4e509fc8e305b%3A0x6f8b14c0f7b4a31b!2sOrl%C3%A9ans!5e0!3m2!1sfr!2sfr!4v1613564671332!5m2!1sfr!2sfr"
          width="100%"
          height="300"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
        >
        </iframe>
      </div>
    </div>
  </div>
</div>
{% endblock %}
