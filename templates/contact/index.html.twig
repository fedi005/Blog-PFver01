{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Contactez-nous</h1>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.sujet) }}
            {{ form_row(form.message) }}
            {{ form_row(form.submit) }}
        {{ form_end(form) }}

        <h3 class="mt-4">Nos informations</h3>
        <p><strong>Adresse :</strong> 123 Rue Exemple, 45000 Orléans</p>
        <p><strong>Téléphone :</strong> +33 1 23 45 67 89</p>
        <p><strong>Horaires :</strong> Lundi - Vendredi : 9h - 18h</p>

        <div class="embed-responsive embed-responsive-16by9 mt-4">
            <iframe
                class="embed-responsive-item"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2635.1199361561963!2d1.9092522766512385!3d47.902964171194204!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4e509fc8e305b%3A0x6f8b14c0f7b4a31b!2sOrl%C3%A9ans!5e0!3m2!1sfr!2sfr!4v1613564671332!5m2!1sfr!2sfr"
                width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </div>
{% endblock %}
