{% extends 'base.html.twig' %}

{% block title %}New Message{% endblock %}

{% block body %}
    <h1 class="my-4">Create new Message</h1>

    <div class="container">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form) }}
            </div>
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_message_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}
